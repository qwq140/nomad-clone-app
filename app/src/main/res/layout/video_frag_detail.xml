<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_video_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/li2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="25dp"
                android:textColor="#242425"
                android:text="#0.1 What Are We Building (02:11)"/>

            <WebView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_vrepley"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글쓰기"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_video_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <RelativeLayout
                android:id="@+id/reply_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#f3f3f3"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:visibility="invisible">

                <EditText
                    android:id="@+id/et_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_toLeftOf="@+id/iv_reply_send"
                    android:hint="Enter Message"
                    android:maxLines="3"
                    android:scrollbars="vertical" />

                <ImageView
                    android:id="@+id/iv_reply_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/et_reply"
                    android:layout_alignBottom="@+id/et_reply"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="1px"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginBottom="1px"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="10dp"
                    android:paddingTop="5.0dip"
                    android:paddingRight="10dp"
                    android:paddingBottom="5.0dip"
                    android:src="@drawable/ic_send" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>